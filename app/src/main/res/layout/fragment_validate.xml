<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kdotz.regisscis.ValidateFragment"
    tools:showIn="@layout/activity_validate">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_firstName"
        android:layout_alignParentStart="true"
        android:hint="First Name"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textLayout_lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_firstName">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_lastName"
            android:layout_alignParentStart="true"
            android:hint="Last Name"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_errorCheckForErrors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textLayout_lastName"
        android:text="Check for Errors" />



</RelativeLayout>
